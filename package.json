{
  "name": "hugo-theme-boilerplate",
  "version": "0.1.0",
  "description": "",
  "private": true,
  "scripts": {
    "build": "run-s build:webpack build:hugo",
    "build:hugo": "hugo -s demo -d ../dist/demo --themesDir ../dist",
    "build:webpack": "webpack",
    "build:webpack:prod": "webpack --env.prod",
    "build:storybook": "build-storybook",
    "dev": "run-s build:webpack dev:start",
    "dev:start": "run-p dev:webpack dev:hugo",
    "dev:hugo": "hugo serve -s demo -d ../dist/demo --themesDir ../dist -vw",
    "dev:webpack": "webpack -w",
    "storybook": "start-storybook -p 6006"
  },
  "author": "Lior Kummer",
  "license": "GPL-3.0",
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@storybook/html": "^5.3.13",
    "babel-loader": "^8.0.6",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-loader": "^3.0.3",
    "hugo-bin": "^0.52.2",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "sass-loader": "^8.0.2",
    "stylelint": "^13.2.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.14.2",
    "stylelint-webpack-plugin": "^1.2.3",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2"
  }
}
